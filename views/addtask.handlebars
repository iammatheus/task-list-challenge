<h3>Nova Tarefa</h3>
<div class="card">
   <div class="card-body">
      <form method="POST" action="/task/new">
         <label for="taskName">*Nome: </label>
         <input type="text" id="taskName" name="taskName" placeholder="Nome da tarefa" class="form-control addTaskInput">

         <label for="description" class="mt-3">Observação: </label>
         <textarea id="description" name="description" placeholder="Observação da tarefa" class="form-control"></textarea>
         
         <button type="submit" class="btn btn-success mt-3">Criar tarefa</button>
      </form>
   </div>
</div>

<script src="/js/script.js"></script>